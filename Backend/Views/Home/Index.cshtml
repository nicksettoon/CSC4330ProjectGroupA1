@{
    ViewData["Title"] = "Home Page";
}
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
</head>

<body id="home">
    <div class="container">
        <main role="main">
            <div class="row">
                <div class="col-6" id="bikeUsePanel">
                    <div class="row p-4">
                        <h3 class="text-white">Hi, @ViewData["USER"]</h3>
                    </div>
                    <div class="row justify-content-center">
                        <p class="w-100">Current Bike Number: <br> @ViewData["BIKE NUMBER"] </p>
                        <div class="w-100 d-flex justify-content-center p-5">
                            <img class="img-fluid;" style="max-width: 60%;" src="../img/BIKE 2.png">
                        </div>
                        <p class="w-100" style="padding-bottom: 10%; ">Current Charge: <br> @ViewData["TOTAL COST"] </p>
                    </div>
                </div>
                <div class="col-md-6" id="userOptionsPanel">
                    <div class="row justify-content-center align-items-center flex-column flex-wrap"
                         style="height: 100vh;">
                        <a class="btn userOptionsBtn m-4" id="rentBtn" asp-area="Rent" asp-controller="Rent" asp-action="Rent">Rent Bike</a>
                        <a class="btn userOptionsBtn m-4" id="returnBtn" asp-area="Rent" asp-controller="Rent" asp-action="Return">Return Bike</a>
                    </div>
                </div>
                @{ var RentResult = TempData["Rent"] as string;
                    var ReturnResult = TempData["Return"] as string;
                    var price = TempData["Price"];
                }

                @if (RentResult == "true")
                {
                    <div id="popUp" class="modal">
                        <div class="modal-content animate" action="/action_page.php">
                            <div class="container2">
                                <h4>You rented the bike :)</h4>
                            </div>

                            <button type="button" onclick="document.getElementById('popUp').style.display='none'" class="cancelbtn">Close</button>
                        </div>
                    </div>
                }
                @if (ReturnResult == "true")
                {
                    <div id="popUp" class="modal">
                        <div class="modal-content animate" action="/action_page.php">
                            <div class="container2">
                                <h4>You returned the bike :)</h4>

                                <h4>Total price was: <var>price</var> </h4> 
                            </div>

                            <button type="button" onclick="document.getElementById('popUp').style.display='none'" class="cancelbtn">CLose</button>
                        </div>
                    </div>
                }

            </div>

        </main>
    </div>

    <script>
        document.getElementById('rentBtn').addEventListener("click", function () {
            setRenting(true);
        });
        document.getElementById('returnBtn').addEventListener("click", function () {
            setRenting(false);
        });

        var modal = document.getElementById('popUp');

        window.onclick = function (event) {
            if (event.target == modal) {
                modal.style.display = "none";
            }
    </script>
</body>